<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-check.2.8.xsd">
    
    <!-- ========== ML LIBRARIES - KNOWN SAFE PATTERNS ========== -->
    
    <!-- Transformers: Pickle/Deserialization is required for model loading -->
    <suppress>
        <notes><![CDATA[
        ML libraries require deserialization for model loading.
        Risk mitigated by loading only trusted models.
        ]]></notes>
        <packageUrl regex="true">pkg:pypi/transformers.*</packageUrl>
        <cve>CVE-2023-.*</cve>
    </suppress>

    <!-- PyTorch: Pickle usage is unavoidable -->
    <suppress>
        <notes><![CDATA[
        PyTorch uses pickle for model serialization.
        Only load models from trusted sources.
        ]]></notes>
        <packageUrl regex="true">pkg:pypi/torch.*</packageUrl>
        <cve regex="true">CVE-.*pickle.*</cve>
    </suppress>

    <!-- ========== DEVELOPMENT ONLY ========== -->
    
    <!-- Pytest: Test framework only, never in production -->
    <suppress>
        <notes><![CDATA[
        Development/testing dependency only
        ]]></notes>
        <packageUrl regex="true">pkg:pypi/pytest.*</packageUrl>
    </suppress>

    <!-- ========== FALSE POSITIVES ========== -->
    <!-- Add specific CVEs that are false positives here -->
    
</suppressions>
